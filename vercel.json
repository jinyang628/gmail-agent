{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/cron/gmail/monitor",
      "dest": "/api/cron/gmail/monitor.ts"
    },
    {
      "src": "/api/test-gmail",
      "dest": "/api/test-gmail.ts"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/gmail/monitor",
      "schedule": "30 5 * * *"
    }
  ]
}
